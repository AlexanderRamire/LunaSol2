
@{
    Layout = null;
}

<!DOCTYPE html>

<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
</head>


<body class="" style=" background: #653636; background: linear-gradient( to right; #ffa751, #653636 );">
    <style>
        .imagen-login {
            background-image: url(/Imagenes/login/leyendo.jpg);
            background-position: center center;
            margin-top: 50px;
            width: 100%;
            
        }
    </style>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container w-75 rounded shadow">

                    <div class="row justify-content-end">
                        <div class="col imagen-login">

                        </div>
                        <div class="col-lg-5">

                            <div class="card shadow-lg border-0 rounded-lg mt-5">

                                <div class="col">
                                    <div class="text-end">
                                        <img src="~/imagenes/login/logo-libro.jpg" style="width:68px;" />
                                    </div>
                                </div>
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Inicia Sesion en LunaSol</h3></div>
                                <div class="card-body mb-4">
                                    <form action="@Url.Content("~/Login/Index")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="NCorreo" type="email" placeholder="name@example.com" @*value="pruebas@gmail.com"*@ value="admin@example.com" />
                                            <label for="inputEmail">Correo</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" @*value="12345"*@ autocomplete="off" value="admin123" />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @{if (ViewBag.Error != null)
                                                {
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button class="btn btn-success btn-block" type="submit">Ingresar</button>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-sm-12 text-center">
                                                <p class="mb-0">Interfaz login LunaSol</p>
                                            </div>
                                        </div>
                                    </form>

                                </div>

                                <div class="card-footer text-center py-3">
                                    <div class="small"><a id="publicidad_cuenta" href="@Url.Action("Registrarse","Login")">Necesitas una cuenta? Registrate!</a></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </main>
        </div>
        
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>

    </script>
</body>
</html>
